{
  "name": "remvscode",
  "displayName": "REM VSCode",
  "description": "VSCode extension utilizing the REM toolchain and Rust Analyzer to allow for comprehensive refactoring of Rust Code",
  "version": "0.1.2",
  "engines": { "vscode": "^1.92.0" },
  "categories": ["Other"],
  "activationEvents": ["onLanguage:rust"],
  "main": "./out/main.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "REM VSCode",
      "properties": {
        "remvscode.aeneasBinariesPath": {
          "type": "string",
          "default": "",
          "description": "Path to the folder where Aeneas/CHARON binaries are stored. Leave empty to use $HOME/.local/bin."
        },
        "remvscode.daemonPath": {
          "type": "string",
          "default": "rem-extract",
          "description": "Path to the rem-extract stdio daemon binary (used for live refactoring and workspace updates)."
        }
      }
    },

    "commands": [
      { "command": "remvscode.reinit", "title": "REM: Reinitialize Database" },
      { "command": "remvscode.extract", "title": "REM: Extract Method" },
      { "command": "remvscode.repair", "title": "REM: Repair Code" },
      { "command": "remvscode.extractRepair", "title": "REM: Extract Method & Repair" },
      { "command": "remvscode.extractVerify", "title": "REM: Extract Method & Verify" },
      { "command": "remvscode.extractRepairVerify", "title": "REM: Extract, Repair & Verify" }
    ],

    "menus": {
      "commandPalette": [
        { "command": "remvscode.reinit", "when": "editorLangId == rust" }
      ],
      "editor/context": [
        {
          "command": "remvscode.extract",
          "group": "navigation@10",
          "when": "editorHasSelection && editorLangId == rust"
        },
        {
          "command": "remvscode.repair",
          "group": "navigation@11",
          "when": "editorHasSelection && editorLangId == rust"
        },
        {
          "command": "remvscode.extractRepair",
          "group": "navigation@12",
          "when": "editorHasSelection && editorLangId == rust"
        },
        {
          "command": "remvscode.extractVerify",
          "group": "navigation@13",
          "when": "editorHasSelection && editorLangId == rust"
        },
        {
          "command": "remvscode.extractRepairVerify",
          "group": "navigation@14",
          "when": "editorHasSelection && editorLangId == rust"
        }
      ]
    },

    "keybindings": []
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "tsc -watch -p ./",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },

  "repository": { "type": "git", "url": "https://github.com/RuleBrittonica/rem-vscode" },
  "publish": {
    "baseContentUrl": "https://github.com/RuleBrittonica/rem-vscode/blob/main/",
    "baseImagesUrl": "https://github.com/RuleBrittonica/rem-vscode/raw/main/images/"
  },
  "publisher": "MatthewBritton",
  "dependencies": {
    "@vscode/vsce": "^3.2.2",
    "mocha": "^10.7.3",
    "typescript": "^5.5.4"
  }
}
